<!DOCTYPE html>
<html>
<body>
  <h3>Factorial using Arrow Function</h3>

  <input type="number" id="num1" placeholder="Enter a number">
  <button onclick="findFactorial()">Find Factorial</button>

  <p id="result1"></p>

  <script>
    const factorial = num => {  
      let fact = 1;
      for (let i = 1; i <= num; i++) fact *= i;
      return fact;
    };

    function findFactorial() {
      const num = document.getElementById("num1").value;
      document.getElementById("result1").innerText = 
        `Factorial of ${num} is: ${factorial(num)}`;
    }
  </script>
</body>
</html>
