<!DOCTYPE html>
<html>
<body>
  <h3>Fibonacci Series using Arrow Function</h3>

  <input type="number" id="num2" placeholder="Enter count">
  <button onclick="generateFibonacci()">Generate</button>

  <p id="result2"></p>

  <script>
    const fibonacci = n => {
      let fib = [0, 1];
      for (let i = 2; i < n; i++) fib[i] = fib[i - 1] + fib[i - 2];
      return fib.slice(0, n);
    };

    function generateFibonacci() {
      const num = document.getElementById("num2").value;
      document.getElementById("result2").innerText =
        `Fibonacci Series: ${fibonacci(num)}`;
    }
  </script>
</body>
</html>
